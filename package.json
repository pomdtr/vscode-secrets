{
	"name": "secrets",
	"publisher": "pomdtr",
	"displayName": "Secrets",
	"description": "Manage secrets in a secure way",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/pomdtr/vscode-secrets"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"browser": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Secrets",
			"properties": {
				"secrets.enabledCollections": {
					"type": "array",
					"markdownDescription": "The secrets collections to load in the current Workspace",
					"items": {
						"type": "string"
					},
					"default": ["default"],
					"scope": "window"
				}
			}
		},
		"menus": {
			"view/title": [
				{
					"command": "secrets.import",
					"when": "view == secretExplorer"
				},
				{
					"command": "secrets.export",
					"when": "view == secretExplorer"
				},
				{
					"command": "secrets.refresh",
					"when": "view == secretExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "collections.create",
					"when": "view == secretExplorer && viewItem == category-collections",
					"group": "inline@1"
				},
				{
					"command": "collections.enable",
					"when": "view == secretExplorer && viewItem == disabled-collection"
				},
				{
					"command": "collections.disable",
					"when": "view == secretExplorer && viewItem == enabled-collection"
				},
				{
					"command": "secrets.create",
					"when": "view == secretExplorer && viewItem =~ /^enabled-collection$|^disabled-collection$/",
					"group": "inline@1"
				},
				{
					"command": "collections.delete",
					"when": "view == secretExplorer && viewItem =~ /^enabled-collection$|^disabled-collection$/",
					"group": "inline@2"
				},
				{
					"command": "secrets.delete",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@3"
				},
				{
					"command": "secrets.copy",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@1"
				},
				{
					"command": "secrets.edit",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@2"
				}
			],
			"commandPalette": [
				{
					"command": "secrets.copy",
					"when": "false"
				},
				{
					"command": "secrets.edit",
					"when": "false"
				},
				{
					"command": "secrets.delete",
					"when": "false"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "secretExplorer",
					"name": "Secrets"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "secrets",
				"contents": "No secret found.\n[Create Secret](command:secrets.create)"
			}
		],
		"commands": [
			{
				"command": "collections.create",
				"title": "Add Collection",
				"icon": "$(plus)"
			},
			{
				"command": "collections.delete",
				"title": "Add Collection",
				"icon": "$(trash)"
			},
			{
				"command": "collections.enable",
				"title": "Enable Collection"
			},
			{
				"command": "collections.disable",
				"title": "Disable Collection"
			},
			{
				"command": "secrets.refresh",
				"title": "Refresh Secrets",
				"icon": "$(refresh)"
			},
			{
				"command": "secrets.edit",
				"title": "Edit Secret",
				"shortTitle": "Edit",
				"icon": "$(pencil)"
			},
			{
				"command": "secrets.copy",
				"title": "Copy Secret",
				"shortTitle": "Copy",
				"icon": "$(clippy)"
			},
			{
				"command": "secrets.delete",
				"title": "Delete Secret",
				"shortTitle": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "secrets.create",
				"title": "Create Secret",
				"shortTitle": "Create",
				"icon": "$(plus)"
			},
			{
				"command": "secrets.import",
				"title": "Import Secrets"
			},
			{
				"command": "secrets.export",
				"title": "Export Secrets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"buffer": "^6.0.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"process": "^0.11.10",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
