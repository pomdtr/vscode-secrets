{
	"name": "secret-manager",
	"publisher": "pomdtr",
	"displayName": "Secrets",
	"description": "Manage Secrets in a Secure Way",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/pomdtr/vscode-secrets"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"browser": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Secrets",
			"properties": {
				"secretManager.enabledFolders": {
					"type": "array",
					"markdownDescription": "The secrets folders to load in the current Workspace",
					"items": {
						"type": "string"
					},
					"default": [
						"default"
					],
					"scope": "window"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "$(lock)",
					"title": "Secret Manager",
					"id": "secretManager"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "secretManager.secrets.import",
					"when": "view == secretExplorer"
				},
				{
					"command": "secretManager.secrets.export",
					"when": "view == secretExplorer"
				},
				{
					"command": "secretManager.secrets.refresh",
					"when": "view == secretExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "secretManager.folders.create",
					"when": "view == secretExplorer && viewItem == category-folders",
					"group": "inline@1"
				},
				{
					"command": "secretManager.folders.enable",
					"when": "view == secretExplorer && viewItem == disabled-folder"
				},
				{
					"command": "secretManager.folders.disable",
					"when": "view == secretExplorer && viewItem == enabled-folder"
				},
				{
					"command": "secretManager.secrets.create",
					"when": "view == secretExplorer && viewItem =~ /^enabled-folder$|^disabled-folder$/",
					"group": "inline@1"
				},
				{
					"command": "secretManager.folders.delete",
					"when": "view == secretExplorer && viewItem =~ /^enabled-folder$|^disabled-folder$/",
					"group": "inline@2"
				},
				{
					"command": "secretManager.secrets.delete",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@3"
				},
				{
					"command": "secretManager.secrets.copy",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@1"
				},
				{
					"command": "secretManager.secrets.edit",
					"when": "view == secretExplorer && viewItem == secret",
					"group": "inline@2"
				}
			],
			"commandPalette": [
			]
		},
		"views": {
			"secretManager": [
				{
					"id": "secretExplorer",
					"name": "Explorer",
					"contextualTitle": "Secret Manager",
					"icon": "$(lock)"
				}
			]
		},
		"commands": [
			{
				"command": "secretManager.folders.create",
				"title": "Add Folder",
				"icon": "$(plus)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.folders.delete",
				"title": "Add Folder",
				"icon": "$(trash)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.folders.enable",
				"title": "Enable Folder",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.folders.disable",
				"title": "Disable Folder",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.refresh",
				"title": "Refresh Secrets",
				"icon": "$(refresh)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.edit",
				"title": "Edit Secret",
				"shortTitle": "Edit",
				"icon": "$(pencil)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.copy",
				"title": "Copy Secret",
				"shortTitle": "Copy",
				"icon": "$(clippy)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.delete",
				"title": "Delete Secret",
				"shortTitle": "Delete",
				"icon": "$(trash)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.create",
				"title": "Create Secret",
				"shortTitle": "Create",
				"icon": "$(plus)",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.import",
				"title": "Import Secrets",
				"category": "Secret Manager"
			},
			{
				"command": "secretManager.secrets.export",
				"title": "Export Secrets",
				"category": "Secret Manager"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"buffer": "^6.0.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"process": "^0.11.10",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
